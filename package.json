{
  "name": "data-hub-web",
  "version": "1.0.0",
  "description": "Phase 2 prototype for datahub",
  "main": "app/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/uktrade/data-hub-web"
  },
  "dependencies": {
    "async-props": "^0.3.2",
    "axios": "^0.15.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "connect-flash": "0.1.1",
    "connect-redis-crypto": "3.1.1",
    "express": "^4.14.0",
    "express-nunjucks": "^2.0.1",
    "express-session": "^1.14.1",
    "express-validator": "^2.20.8",
    "font-awesome": "^4.6.3",
    "govuk-elements-sass": "^2.1.0",
    "govuk_template_jinja": "^0.19.1",
    "lodash": "^4.16.4",
    "moment": "^2.14.1",
    "morgan": "1.7.0",
    "node-sass": "^3.13.0",
    "nunjucks": "^3.0.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-highlighter": "^0.3.3",
    "react-router": "^2.0.1",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "uglify": "^0.1.5",
    "webpack": "^1.13.3",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-watch": "^2.0.3",
    "browser-sync": "^2.14.2",
    "chai": "^3.5.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "mocha": "^3.0.2",
    "mocha-junit-reporter": "^1.12.0",
    "mocha-multi": "^0.9.1",
    "npm-parallel": "^2.0.1",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "start": "node --use-strict build/server.js",
    "build": "npm run clean && npm run sass && npm run js",
    "test": "mocha --require test/common.js --ui bdd test/**/*.test.js",
    "lint": "npm run lint:js & npm run lint:sass",
    "lint:js": "eslint src/**/*.js",
    "lint:sass": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v -q",
    "develop": "parallel sass:watch js:client:watch js:server:watch",
    "client:watch": "parallel sass:watch js:client:watch",
    "js": "npm run js:server && npm run js:client",
    "js:client": "webpack",
    "js:client:watch": "webpack --watch",
    "js:server": "babel src -d build",
    "js:server:watch": "babel-watch src/server.js",
    "sass:watch": "node-sass src/sass/application.scss build/stylesheets/application.css --source-map build/stylesheets/application.css.map --source-map-contents --include-path ./node_modules/govuk-elements-sass/public/sass/ --include-path ./node_modules/govuk_frontend_toolkit/stylesheets --include-path ./node_modules/font-awesome/scss -w -r",
    "sass": "node-sass src/sass/application.scss build/stylesheets/application.css --include-path ./node_modules/govuk-elements-sass/public/sass/ --include-path ./node_modules/govuk_frontend_toolkit/stylesheets --include-path ./node_modules/font-awesome/scss -x --output-style compressed",
    "postinstall": "npm run build",
    "sync": "browser-sync start --proxy http://localhost:3000 --files build/stylesheets/*.css build/javascripts/*.js"
  },
  "author": "Zac Tolley <zac@thetolleys.com>",
  "license": "MIT",
  "engines": {
    "node": "6.9.1"
  }
}
